<div class="container-xl">
  <div class="jumbotron">
    <div class="row">
      <div class="jumbotron col-md-6 col-lg-5 mx-auto my-auto bg-light border" style="border-radius:8px">
        <%= form_with model: @fixed_expense, url:new_fixed_expense_path, local:true do |f| %>
          <h2 style="text-align:center">New Fixed Expense</h2><br>
            <div class="">
              <%= f.hidden_field :user_id, :value => @user %>
            </div>

            <div class="mt-3" style="display:flex; justify-content:center">
              <i class="fas fa-yen-sign my-auto mr-4 fa-2x text-info"></i>
              <%= f.number_field :amount, placeholder: "金額", class: "form-control w-50", step: "100" %>
            </div>

            <div class="mt-3 mb-3" style="display:flex; justify-content:center">
              <i class="fas fa-comments my-auto mr-3 fa-2x text-info"></i>
              <%= f.text_area :description, placeholder: "説明", class: "form-control w-50" %>
            </div>

            <div style="text-align:center">
              <%= f.submit "ADD", url: new_fixed_expense_path(current_user.id), class: "btn btn-success w-50 mt-3" %>
            </div>

            <div class="mt-5" style="text-align:center">
              <%= link_to "Back", fixed_expenses_path(current_user.id), class:"btn btn-outline-secondary rounded rounded-pill mx-auto w-25", style: "border:none; opacity:0.7" %>
            </div>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<section>
  <div class="jumbotron my-auto w-auto">
    <div class="container">
      <div class="jumbotron col-md-7 col-lg-5 mx-auto bg-light border">
        <h2>New Income</h2><br>
        <div>
          <%= form_with model: @income, url: new_income_path, local:true do |f| %>
            <div class="field mb-3">
              <h5>Income</h5>
              <div class="control ml-4" style="display:flex;">
                <p class="mr-3" style="font-size:24px">¥ </p>
                <%= f.number_field :amount, class: "form-control w-100" %>
              </div>
            </div>

            <div class="field">
              <h5>Saving</h5>
              <div class="control ml-4" style="display:flex;">
                <p class="mr-3" style="font-size:24px">¥ </p>
                <%= f.number_field :saving, class: "form-control w-100" %>
              </div>
            </div>
            <div class="actions mt-3">
              <%= f.submit class: "btn btn-outline-success w-50" %>
            </div>
            <div class="mt-5" style="text-align:center">
              <%= link_to "Back", :back, class:"text-secondary mx-auto" %>
            </div>
            <br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="jumbotron">
  <div class="container-xl mx-auto my-auto">
    <%= form_with model: @income, url: incomes_path, local:true do |f| %>
      <div class="mx-auto col-md-6" style="display:flex">
        <h2 class="text-secondary">Income</h2>
        <%= link_to new_income_path, class: "btn rounded-circle my-auto", style: "font-size:22px; opacity:0.7; color: #28a745" do %>
          <i class="fas fa-plus-circle fa-lg"></i>
        <% end %>
      </div>
      <% @income.each do |income| %>
        <div class="jumbotron mx-auto col-md-5 bg-light shadow" style="border-radius:8px;">
          <div class="" style="display:flex">
            <div class="">
              <div class="" style="display:flex">
                <div class="">
                  <h4>収入額</h4>
                  <span class="ml-3">
                    <p class="fas fa-yen-sign fa-lg text-info my-auto" style="text-align:right"><%= ( income.amount ).to_s(:delimited, delimiter: ',') %></p>
                  </span>
                </div>
                <div class="ml-auto" style="text-align:center; min-width:100px">
                  <h4>貯金額</h4>
                  <span class="ml-5">
                    <p class="fas fa-yen-sign fa-lg text-info my-auto" style="text-align:right"><%= ( income.saving ).to_s(:delimited, delimiter: ',') %></p><br>
                  </span>
                </div>
              </div>
              <div class="mt-3 mb-3 border"></div>
              <h4>Priod</h4>
              <div class="ml-3">
                <div class="" style="display:flex">
                  <div class="" style="min-width:100px">
                    Start <br>
                    <%= income.period_start %><br>
                  </div>
                  <div class="ml-5">
                    End <br>
                    <%= income.period_end %>
                  </div>
                </div>
              </div>
            </div>
            <div class="my-auto ml-auto">
              <%= link_to edit_income_path(income.id), class: "btn btn-md btn-outline-secondary rounded rounded-circle" do %>
                <i class="fas fa-pen"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
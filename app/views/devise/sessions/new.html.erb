<section>
  <div class="jumbotron my-auto w-auto">
    <div class="container">
      <div class="jumbotron col-md-7 col-lg-5 mx-auto bg-light border">
        <h2>Log in</h2><br>
          <p>Please login to proceed.</p>
        <div>
          <% if @user.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <ul>
                <%= @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= form_with model: @user, url: user_session_path, local:true do |f| %>
            <div class="field">
              <div class="control">
                <p></p>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Your Email" %>
              </div>
            </div>

            <div class="field">
              <p></p>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:"Password" %>
            </div>

            <div class="actions mt-3">
              <%= button_tag type: "submit", class:"btn btn-primary w-100" do %>
                Log in<i class="fas fa-sign-in-alt fa-lg ml-1"></i>
              <% end %>
              <% if devise_mapping.rememberable? %>
                <div class="login-remember_me">
                  <%= f.check_box :remember_me, class:"checkbox" %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            </div>
            <br>
            <p class="border border-secondary" style="opacity:0.5" ></p>
          <% end %>
          <p class="login-subtext">
            <%= render "devise/shared/links" %>
          </p>
          </div>
        </div>
    </div>
  </div>
</section>
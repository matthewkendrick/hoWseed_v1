<div class="jumbotron">
  <div class="container-xl mx-auto my-auto">
    <%= form_with model: @income, url: incomes_path, local:true do |f| %>
      <div class="" style="display:flex">
        <h2 class="text-secondary">Income</h2>
        <%= link_to new_income_path(current_user.id), class: "btn rounded-circle my-auto", style: "font-size:22px; opacity:0.7; color: #28a745" do %>
          <i class="fas fa-plus-circle fa-lg"></i>
        <% end %>
      </div>
      <div class="jumbotron bg-light shadow" style="border-radius:8px;">
        <div class="row">
          <div class="col-lg-12 mx-auto">
            <table class="table table-hover" style="text-align:center">
              <thead>
                <tr>
                  <th>収入額 <i class="fas fa-yen-sign"></i></th>
                  <th>貯金額 <i class="fas fa-yen-sign"></i></th>
                  <th>Start</th>
                  <th>End</th>
                  <th style="width:80px"></th>
                </tr>
              </thead>
              <tbody>
                <% @income.each do |income| %>
                  <tr>
                    <td><%= ( income.amount ).to_s(:delimited, delimiter: ',') %></td>
                    <td><%= ( income.saving ).to_s(:delimited, delimiter: ',') %></td>
                    <td><%= income.period_start %></td>
                    <td><%= income.period_end %></td>
                    <td>
                      <%= link_to edit_income_path(income.id), class: "btn btn-outline-secondary rounded-circle", style: "font-size:13px" do %>
                        <i class="far fa-pen"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>